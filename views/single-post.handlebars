<div class="post">
    <div class="card">
        <div class="card-header">
            <h2>{{post.title}}</h2>
            <div>{{post.User.username}} {{format_date post.createdAt}}</div>
        </div>
        <div class="card-body">{{post.body}}</div>
    </div>

    {{#if post.Comments}}
    <section class="card">
        <div class="card-header">
            <h3>Comments</h3>
        </div>

        <div class="card-body">
    {{#each post.Comments}}
    <div>
        <p>{{this.body}}</p>
        <p>{{this.User.username}},{{format_date this.createdAt}} </p>
    </div>

    {{/each}}

        </div>
    </section>

    {{/if}}

    {{#if Session.loggedIn}}
    <form id="new-comment" class="card">
        <div class="card-header">
            <h3>add new comment</h3>
        </div>

        <div class="card-body">
            <input type="hidden" id="post-id" value='{{post.id}}' />
            <label for="comment-body" class="form-label">Comment</label>
            <input type="text" id="commentBody" class="form-input"/>
            <button id="newComment" class="btn" type="submit">Submit</button>
        </div>
    </form>
    {{/if}}
</div>

<script src="/JS/comment.js"></script>