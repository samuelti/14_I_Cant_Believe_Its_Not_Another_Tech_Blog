<div class="post">
    <div class="card">
        <div class="card-header">
            <h2>{{post.title}}</h2>
            <div>{{post.User.username}} {{format_date post.createdAt}}</div>
        </div>
        <div class="card-body">{{post.body}}</div>
    </div>

    <form id="updatePost" class="card">
        <div class="card-header">
            <h3>Edit your post</h3>
        </div>

        <div class="card-body">
            <input type="hidden" id="post-id" value='{{post.id}}' />
            <label for="post-title" class="form-label">Title</label>
            <input type="text" id="post-title" class="form-input" value="{{post.title}}" />
            <label for="post-body" class="form-label">Body</label>
            <input type="text" id="post-body" class="form-input" value="{{post.body}}" />
            <button id="updatePost" class="btn" type="submit">Submit</button>
        </div>
    </form>
</div>

<script src="/JS/edit.js"></script>